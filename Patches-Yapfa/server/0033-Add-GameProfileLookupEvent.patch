+        			copyProfileProperties(result, this.profile, true);
+        		}
+                server.getUserCache().saveProfile(this.profile);
+        	}
+        	// YAPFA end
         }
         return profile.isComplete() && (!isOnlineMode || !textures || hasTextures());
     }
